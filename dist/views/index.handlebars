<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>The Golf Pool</title>

    <script>
      // BOOTSTRAP DATA
      //
      var sd = window.golfDraftSeed = {};
      sd.golfers = {{{golfers}}};
      sd.players = {{{players}}};
      sd.draft = {{{draft}}};
      sd.scores = {{{scores}}};
      sd.tourney = {{{tourney}}};
      sd.user = {{{or user "null"}}};

      [
        sd.golfers,
        sd.players,
        sd.scores,
        [sd.draft],
        [sd.tourney]
      ].forEach(function (mongoObjs) {
        mongoObjs.forEach(function (o) {
          o.id = o._id;
        });
      });
    </script>
  </head>
  <body>
    <section id="golfdraftapp" />
    <script src="//d32f0b5bf2mq7f.cloudfront.net/dist/bundle.085fc3f94a4495db7e97.js"></script>
  </body>
</html>
