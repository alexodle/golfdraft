<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>The Golf Pool</title>
    <link rel="stylesheet" href="assets/bootstrap-3.1.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/app.css">

    <script>
      // BOOTSTRAP DATA
      //
      var sd = window.golfDraftSeed = {};
      sd.golfers = {{{golfers}}};
      sd.players = {{{players}}};
      sd.draft = {{{draft}}};
      sd.tourney = {{{tourney}}};
      sd.user = {{{or user "null"}}};

      [
        sd.golfers,
        sd.players,
        [sd.draft],
        [sd.tourney]
      ].forEach(function (mongoObjs) {
        mongoObjs.forEach(function (o) {
          o.id = o._id;
        });
      });
    </script>
  </head>
  <body>
    <section id="golfdraftapp" />
    <script src="distd/bundle.js"></script>
  </body>
</html>
