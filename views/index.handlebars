<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>The Golf Pool</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/app.css">

    <script>
      // BOOTSTRAP DATA

      var sd = window.golfDraftSeed = {};
      sd.golfers = {{{golfers}}};
      sd.players = {{{players}}};
      sd.draft = {{{draft}}};
      sd.tourney = {{{tourney}}};
      sd.user = {{{or user "null"}}};

      [
        sd.golfers,
        sd.players,
        [sd.draft],
        [sd.tourney]
      ].forEach(function (mongoObjs) {
        mongoObjs.forEach(function (o) {
          o.id = o._id;
        });
      });
    </script>
  </head>
  <body>
    <section id="todoapp" />
    {{#if prod}}
    <script src="dist/bundle.min.js"></script>
    {{else}}
    <script src="dist/bundle.js"></script>
    {{/if}}
  </body>
</html>
